class Solution{
  public:

    int smallestSubWithSum(int arr[], int n, int x)
    {
        
        int ans=INT_MAX;
        int curr_sum=0;
        int j=0;
        for(int i=0;i<n;i++){
            curr_sum+=arr[i];
            while(curr_sum>x){
                ans=min(ans,i-j+1);
                curr_sum-=arr[j++];
            }
        }
           return ans==INT_MAX ?0:ans;
    }
};
