class Solution{   
public:
    int median(vector<vector<int>> &mat, int r, int c){
             
     vector<int>ans;
     for(int i=0;i<r;i++){
         for(int j=0;j<c;j++){
             ans.push_back(mat[i][j]);
         }
     }
     sort(ans.begin(),ans.end());
     int n=ans.size();
     if(n%2){
         return ans[n/2];
     }
     else return (ans[n/2-1]+ans[n/2])/2;
    }
};
