class Solution{   
public:
    int getPairsCount(int arr[], int n, int k) {
        // code here
        int ans=0;
        unordered_map<int,int>mp;
        for(int i=0;i<n;i++){
            int val=k-arr[i];
            if(mp[val])
              ans+=mp[val];
              
              mp[arr[i]]++;
        }
        return ans;
    }
};
