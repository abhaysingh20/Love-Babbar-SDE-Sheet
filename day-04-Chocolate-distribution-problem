class Solution{
    public:
    long long findMinDiff(vector<long long> a, long long n, long long m){
      
      sort(a.begin(),a.end());
      long long i=0;
      long long j=m-1;
      long long dit=INT_MAX;
      
      while(j<n){
          dit=min(dit,a[j]-a[i]);
          i++;
          j++;
      }
      return dit;
    
    }   
};
